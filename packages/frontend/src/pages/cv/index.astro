---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/headerWrapper/HeaderWrapper.astro";
import Main from "@/components/main/Main.astro";
import Footer from "@/components/footer/Footer.astro";
import styles from "./_main.module.css";
---

<Layout title="CV" description="mandatory resume page">
    <Header />
    <Main class={styles.main}>
        <h2><a href="https://cv.gregosilaja.cc">cv.gregosilaja.cc</a></h2>
        <section class={styles.section}>
            <iframe
                id="cv-site"
                class={styles.iframe}
                src="https://cv.gregosilaja.cc/"></iframe>
            <div class={styles.overlay} id="iframe-overlay"></div>
            <a href="https://cv.gregosilaja.cc/"
                ><span class={styles.overlay}></span></a
            >
        </section>
    </Main>
    <Footer />
</Layout>
