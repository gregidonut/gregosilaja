---
import styles from "./header.module.css";
import ReactNavSection from "./reactNavSection/ReactNavSection.tsx";
import NavSection from "./navSection/NavSection.astro";
import SiteTitle from "@/components/siteTitle/SiteTitle.astro";

const curPath = Astro.url.pathname;

const footerHtml = await Astro.slots.render("default");
---

<header class={styles.header}>
    <ReactNavSection footerHTML={footerHtml} client:only="react" />
    <a href="/">
        <img src="/favicon.svg" alt="logo" />
        {
            curPath !== "/" && (
                <>
                    <SiteTitle />
                </>
            )
        }
    </a>
    <NavSection />
</header>
